{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "outDir": "./src/static/dist",
    "rootDir": "./src/static/scripts"
  },
  "include": [
    "src/static/scripts/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}